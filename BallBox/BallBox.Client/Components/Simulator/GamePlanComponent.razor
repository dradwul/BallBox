<div class="game-plan-background">
    <div class="game-plan">
        @for (int i = 1; i <= 5; i++)
        {
            <div class="game-zone-@(GetZoneLetter(i)) @(GetZoneClass(i))">
                @if (i == 1 || i == 3 || i == 5)
                {
                    <div class="game-zone-@(GetZoneLetter(i))-details">
                        @if (i == 3)
                        {
                            <div class="game-zone-c-details-aa"></div>
                        }
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public int ActiveZone { get; set; }

    private string GetZoneLetter(int zoneNumber)
    {
        return zoneNumber switch
        {
            1 => "a",
            2 => "b",
            3 => "c",
            4 => "d",
            5 => "e",
            _ => string.Empty,
        };
    }

    private string GetZoneClass(int zoneNumber)
    {
        return zoneNumber == ActiveZone ? "game-zone-active-zone" : string.Empty;
    }
}
